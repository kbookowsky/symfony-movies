{% extends "./base.html.twig" %}

{% block body %}
    <div class="sm:w-3/5 w-4/5 mx-auto pt-32 pb-16">
        <h1 class="sm:text-5xl md:text-7xl text-4xl font-bold text-center">
            {{ movie.title }}
        </h1>

        <div class="py-10 text-center">
            <div class="inline-block sm:pt-1">
                <h2 class="font-bold mb-3">
                    Action, comedy
                </h2>
                <p class="text-sm text-gray-600">
                    28-01-2022 4 min. read
                </p>
            </div>
        </div>
        <img src="{{ movie.imagePath }}" class="rounded-xl w-full shadow-xl"/>
        <p class="text-xl py-6">
            {{ movie.description }}
        </p>
    </div>
{% endblock %}