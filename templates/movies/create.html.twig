{% extends "./base.html.twig" %}

{% block body %}
<div class="w-4/5 m-auto pt-40 pb-10">
    <h1 class="text-6xl text-center pb-12">
        {{ 'Create Movie'|trans }}
    </h1>
    {{ form_start(form) }}
        <div>
            {{ form_label(form.title) }}
            <div class="mt-3 text-red-600">
                {{ form_errors(form.title) }}
            </div>
            {{ form_widget(form.title) }}
        </div>
        <div>
            {{ form_label(form.releaseYear) }}
            <div class="mt-3 text-red-600">
                {{ form_errors(form.releaseYear) }}
            </div>
            {{ form_widget(form.releaseYear) }}
        </div>
        <div>
            {{ form_label(form.duration) }}
            <div class="mt-3 text-red-600">
                {{ form_errors(form.duration) }}
            </div>
            {{ form_widget(form.duration) }}
        </div>
        <div>
            {{ form_label(form.description) }}
            <div class="mt-3 text-red-600">
                {{ form_errors(form.description) }}
            </div>
            {{ form_widget(form.description) }}
        </div>
        <div>
            {{ form_label(form.imagePath) }}
            <div class="mt-3 text-red-600">
                {{ form_errors(form.imagePath) }}
            </div>
            {{ form_widget(form.imagePath) }}
        </div>
        <div>
            {{ form_label(form.genres) }}
            <div class="mt-3 text-red-600">
                {{ form_errors(form.genres) }}
            </div>
            {{ form_widget(form.genres) }}
        </div>
        <div>
            {{ form_label(form.actors) }}
            <div class="mt-3 text-red-600">
                {{ form_errors(form.actors) }}
            </div>
            {{ form_widget(form.actors) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}