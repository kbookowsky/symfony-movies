{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="flex h-screen overflow-hidden">
      <!-- ===== Sidebar Start ===== -->
        <aside class="absolute left-0 top-0 z-9999 flex h-screen w-72.5 flex-col overflow-y-hidden bg-gray-900 duration-300 ease-linear dark:bg-boxdark lg:static lg:translate-x-0 min-w-60">
            <div class="no-scrollbar flex flex-col overflow-y-auto duration-300 ease-linear">
                <nav class="mt-5 px-4 py-4 pt-20 lg:mt-9 lg:px-6">
                    <div>
                        <h3 class="mb-4 text-sm font-medium text-white">MENU</h3>
                        <ul class="mb-6 flex flex-col gap-1.5">
                            <li>
                                <a class="group relative flex items-center gap-2.5 rounded-sm pr-4 py-2 font-medium text-white hover:underline" href="/dashboard">
                                    Dashboard
                                </a>
                            </li>
                            <li>
                                <a class="group relative flex items-center gap-2.5 rounded-sm pr-4 py-2 font-medium text-white hover:underline" href="/dashboard/movies">
                                    Movies
                                </a>
                            </li>
                             <li>
                                <a class="group relative flex items-center gap-2.5 rounded-sm pr-4 py-2 font-medium text-white hover:underline" href="/dashboard/reviews">
                                    Reviews
                                </a>
                            </li>
                            <li>
                                <a class="group relative flex items-center gap-2.5 rounded-sm pr-4 py-2 font-medium text-white hover:underline" href="/dashboard/actors">
                                    Actors
                                </a>
                            </li>
                             <li>
                                <a class="group relative flex items-center gap-2.5 rounded-sm pr-4 py-2 font-medium text-white hover:underline" href="/dashboard/users">
                                    Users
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </aside>
        <div class="relative flex flex-1 flex-col overflow-y-auto overflow-x-hidden">
            <main>
                <div class="mx-auto max-w-screen-2xl p-4 pt-24">
                    <div class="grid gap-6 grid-cols-4">
                        <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
                            <div class="flex items-end justify-between">
                                <h4 class="text-title-lg font-bold text-gray-900">
                                    User:
                                </h4>
                                <span class="text-sm font-medium">{{ app.user.email }}</span>
                            </div>
                        </div>
                        <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
                            <div class="flex items-end justify-between">
                                <h4 class="text-title-lg font-bold text-gray-900">
                                    Movies count:
                                </h4>
                                <span class="text-sm font-medium">99</span>
                            </div>
                        </div>
                        <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
                            <div class="flex items-end justify-between">
                                <h4 class="text-title-lg font-bold text-gray-900">
                                    Reviews count:
                                </h4>
                                <span class="text-sm font-medium">99</span>
                            </div>
                        </div>
                        <div class="rounded-sm border border-stroke bg-white p-6 shadow-default dark:border-strokedark dark:bg-boxdark">
                            <div class="flex items-end justify-between">
                                <h4 class="text-title-lg font-bold text-gray-900">
                                    Users count:
                                </h4>
                                <span class="text-sm font-medium">99</span>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 grid grid-cols-12 gap-4 md:mt-6 md:gap-6 2xl:mt-7.5 2xl:gap-7.5">
                        <div class="col-span-12">
                            <div class="rounded-sm border border-stroke bg-white px-5 pb-2.5 pt-6 shadow-default">
                                <h4 class="mb-6 text-xl font-bold text-black">
                                    Popular movies
                                </h4>
                                <div class="flex flex-col">
                                    <div class="grid grid-cols-3 rounded-sm bg-gray-2 dark:bg-meta-4 sm:grid-cols-5">
                                        <div class="p-5 pl-0">
                                            <h5 class="text-sm font-medium uppercase">Title</h5>
                                        </div>
                                        <div class="p-5">
                                            <h5 class="text-sm text-center font-medium uppercase">Reviews</h5>
                                        </div>
                                        <div class="p-5">
                                            <h5 class="text-sm text-center font-medium uppercase">Comments</h5>
                                        </div>
                                        <div class="p-5">
                                            <h5 class="text-sm text-center font-medium uppercase">Duration</h5>
                                        </div>
                                        <div class="p-5">
                                            <h5 class="text-sm text-center font-medium uppercase">Details</h5>
                                        </div>
                                    </div>
                                    <div class="grid grid-cols-3 sm:grid-cols-5">
                                        <div class="flex items-center p-5 pl-0">
                                            <p class="font-medium text-black">Movie title</p>
                                        </div>
                                        <div class="flex items-center justify-center p-5">
                                            <p class="font-medium text-black">4.5/5</p>
                                        </div>
                                        <div class="flex items-center justify-center p-5">
                                            <p class="font-medium text-black">12</p>
                                        </div>
                                        <div class="flex items-center justify-center p-5">
                                            <p class="font-medium text-black">1h30</p>
                                        </div>
                                        <div class="flex items-center justify-center p-5">
                                            <a href="#" class="font-medium text-black hover:underline">Link</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
