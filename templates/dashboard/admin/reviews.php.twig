{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="flex h-screen overflow-hidden">

        {% include('dashboard/_dashboard-aside.php.twig') %}

        <div class="relative flex flex-1 flex-col overflow-y-auto overflow-x-hidden">
            <main>
                <div class="mx-auto max-w-screen-2xl p-4 pt-24">
                    <div class="mt-4 grid grid-cols-12 gap-4 md:mt-6 md:gap-6 2xl:mt-7.5 2xl:gap-7.5">
                        <div class="col-span-12">
                            <div class="rounded-sm border border-stroke bg-white px-5 pb-2.5 pt-6 shadow-default">
                                <div class="flex justify-between items-center mb-6">
                                    <h4 class="text-xl font-bold text-black">
                                        Manage Reviews
                                    </h4>
                                </div>
                                <div class="flex flex-col">
                                    <div class="grid grid-cols-5 rounded-sm bg-gray-2 dark:bg-meta-4">
                                        <div class="p-5 pl-0">
                                            <h5 class="text-sm font-medium uppercase">User</h5>
                                        </div>
                                        <div class="p-5 pl-0">
                                            <h5 class="text-sm font-medium uppercase">Rating</h5>
                                        </div>
                                        <div class="p-5 pl-0">
                                            <h5 class="text-sm font-medium uppercase">Title</h5>
                                        </div>
                                        <div class="p-5 pl-0">
                                            <h5 class="text-sm font-medium uppercase">Content</h5>
                                        </div>
                                        <div class="p-5">
                                            <h5 class="text-sm text-right font-medium uppercase">Actions</h5>
                                        </div>
                                    </div>
                                    {% if reviews is empty %}
                                        <div class="grid grid-cols-5">
                                            <span>There are no movies to display.</span>
                                        </div>
                                    {% else %}
                                        {% for review in reviews %}
                                            <div class="grid grid-cols-5 border-b border-gray-200 {{ loop.first ? 'border-t' : '' }}">
                                                <div class="flex items-center p-5 pl-0">
                                                    <p class="font-medium text-black">{{ review.user.name }}</p>
                                                </div>
                                                <div class="flex items-center p-5 pl-0">
                                                    <p class="font-medium text-black">{{ review.review }}</p>
                                                </div>
                                                <div class="flex items-center p-5 pl-0">
                                                    <p class="font-medium text-black">{{ review.heading }}</p>
                                                </div>
                                                <div class="flex items-center p-5 pl-0">
                                                    <p class="text-black">{{ review.content }}</p>
                                                </div>
                                                <div class="flex items-center justify-end px-5 gap-x-3">
                                                    <form action="/reviews/delete/{{ review.id }}" method="post">
                                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('review_delete') }}">
                                                        <button type="submit" class="uppercase mt-15 bg-red-900 text-white py-2 px-4 rounded-lg w-fit">
                                                            Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        {% endfor %}
                                        <div class="mt-10 mb-5">
                                            {{ knp_pagination_render(reviews) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
