{% extends 'base.html.twig' %}

{% block title %}{{ 'Change User Role'|trans }} - {{ 'Dashboard'|trans }}{% endblock %}

{% block body %}
    <div class="flex h-screen overflow-hidden">

        {% include('dashboard/_dashboard-aside.php.twig') %}

        <div class="relative flex flex-1 flex-col overflow-y-auto overflow-x-hidden">
            <main>
                <div class="mx-auto max-w-screen-2xl p-4 pt-24">
                    <div class="mt-4 grid grid-cols-12 gap-4 md:mt-6 md:gap-6 2xl:mt-7.5 2xl:gap-7.5">
                        <div class="col-span-12">
                            <div class="rounded-sm border border-stroke bg-white px-5 pb-2.5 pt-6 shadow-default">
                                <div class="flex justify-between items-center mb-6">
                                    <h4 class="text-xl font-bold text-black">
                                        {{ 'Change User Role'|trans }} ({{ user.email }})
                                    </h4>
                                </div>
                                <div class="flex flex-col">
                                    {{ form_start(form) }}
                                        <div>
                                            {{ form_label(form.roles) }}
                                            <div class="mt-3 text-red-600">
                                                {{ form_errors(form.roles) }}
                                            </div>
                                            {{ form_widget(form.roles) }}
                                        </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
{% endblock %}
